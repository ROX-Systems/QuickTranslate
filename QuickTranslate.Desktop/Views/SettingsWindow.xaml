<ui:FluentWindow x:Class="QuickTranslate.Desktop.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Settings - QuickTranslate" 
        Height="650" 
        Width="750"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        MinHeight="550"
        MinWidth="650"
        Background="{ui:ThemeResource ApplicationBackgroundBrush}"
        Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica">
    
    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{ui:ThemeResource TextFillColorSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ui:ThemeResource AccentTextFillColorPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ui:TitleBar Grid.Row="0" Title="Settings"/>
        
        <Grid Grid.Row="1" Margin="16,8,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Left Panel: Provider List -->
            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,12">
                <TextBlock Text="AI Providers" Style="{StaticResource SectionHeader}"/>
                <StackPanel Orientation="Horizontal">
                    <ui:Button Command="{Binding AddProviderCommand}" Appearance="Secondary" Margin="0,0,4,0">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Add24" Margin="0,0,4,0"/>
                            <TextBlock Text="Add" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ui:Button>
                    <ui:Button Command="{Binding DuplicateProviderCommand}" Appearance="Secondary" Margin="0,0,4,0">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Copy24" Margin="0,0,4,0"/>
                            <TextBlock Text="Copy" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ui:Button>
                    <ui:Button Command="{Binding DeleteProviderCommand}" Appearance="Secondary">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Delete24" Margin="0,0,4,0"/>
                            <TextBlock Text="Delete" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ui:Button>
                </StackPanel>
            </StackPanel>

            <ListBox Grid.Column="0" Grid.Row="1"
                     ItemsSource="{Binding Providers}"
                     SelectedItem="{Binding SelectedProvider}"
                     DisplayMemberPath="Name"
                     Margin="0,0,0,8"/>

            <!-- Right Panel: Provider Settings -->
            <TextBlock Grid.Column="2" Grid.Row="0" 
                       Text="Provider Configuration" 
                       Style="{StaticResource SectionHeader}"/>

            <ScrollViewer Grid.Column="2" Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel IsEnabled="{Binding HasSelectedProvider}">
                    <!-- Provider Name -->
                    <TextBlock Text="Provider Name" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding ProviderName, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,12"/>

                    <!-- Base URL -->
                    <TextBlock Text="Base URL" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding BaseUrl, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,12"/>

                    <!-- API Key -->
                    <TextBlock Text="API Key" Style="{StaticResource FieldLabel}"/>
                    <PasswordBox x:Name="ApiKeyBox" 
                                 Margin="0,0,0,12"/>

                    <!-- Model -->
                    <TextBlock Text="Model" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding Model, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,12"/>

                    <!-- Temperature & Max Tokens -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Temperature (0-2)" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Temperature, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Max Tokens" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding MaxTokens, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Timeout -->
                    <TextBlock Text="Timeout (seconds)" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding TimeoutSeconds, UpdateSourceTrigger=PropertyChanged}" 
                             Width="120"
                             HorizontalAlignment="Left"
                             Margin="0,0,0,16"/>

                    <ui:Button Command="{Binding TestConnectionCommand}"
                               Appearance="Secondary"
                               HorizontalAlignment="Left"
                               IsEnabled="{Binding IsTesting, Converter={StaticResource InverseBoolConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Link24" Margin="0,0,6,0"/>
                            <TextBlock Text="Test Connection" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ui:Button>
                </StackPanel>
            </ScrollViewer>

            <!-- Global Settings -->
            <ui:Card Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" Margin="0,12,0,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="Global Settings" Style="{StaticResource SectionHeader}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="Default Target Language:" 
                                   Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,12,0"/>
                        <ComboBox ItemsSource="{Binding AvailableLanguages}"
                                  SelectedItem="{Binding TargetLanguage}"
                                  Width="150"/>
                    </StackPanel>
                    
                    <!-- Hotkeys -->
                    <TextBlock Text="Keyboard Shortcuts" 
                               FontSize="13" 
                               FontWeight="SemiBold" 
                               Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" 
                               Margin="0,0,0,12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Translate Selection:" 
                                   Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" 
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 x:Name="TranslateSelectionHotkeyBox"
                                 Text="{Binding TranslateSelectionHotkeyText, Mode=OneWay}"
                                 IsReadOnly="True"
                                 Margin="0,0,8,12"
                                 PreviewKeyDown="HotkeyBox_PreviewKeyDown"
                                 GotFocus="HotkeyBox_GotFocus"
                                 LostFocus="HotkeyBox_LostFocus"
                                 Tag="TranslateSelection"/>
                        <ui:Button Grid.Row="0" Grid.Column="2" 
                                   Appearance="Secondary"
                                   Click="ResetHotkey_Click" 
                                   Tag="TranslateSelection" 
                                   Margin="0,0,0,12">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="ArrowReset24" Margin="0,0,4,0"/>
                                <TextBlock Text="Reset" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ui:Button>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Show/Hide Window:" 
                                   Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" 
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 x:Name="ShowHideHotkeyBox"
                                 Text="{Binding ShowHideHotkeyText, Mode=OneWay}"
                                 IsReadOnly="True"
                                 Margin="0,0,8,0"
                                 PreviewKeyDown="HotkeyBox_PreviewKeyDown"
                                 GotFocus="HotkeyBox_GotFocus"
                                 LostFocus="HotkeyBox_LostFocus"
                                 Tag="ShowHide"/>
                        <ui:Button Grid.Row="1" Grid.Column="2" 
                                   Appearance="Secondary"
                                   Click="ResetHotkey_Click" 
                                   Tag="ShowHide">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="ArrowReset24" Margin="0,0,4,0"/>
                                <TextBlock Text="Reset" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ui:Button>
                    </Grid>
                </StackPanel>
            </ui:Card>

            <!-- Status & Buttons -->
            <Grid Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}" 
                           Foreground="{ui:ThemeResource AccentTextFillColorPrimaryBrush}"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>

                <ui:Button Grid.Column="1" 
                           Appearance="Secondary"
                           Click="Cancel_Click"
                           Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Dismiss24" Margin="0,0,6,0"/>
                        <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                    </StackPanel>
                </ui:Button>
                
                <ui:Button Grid.Column="2" 
                           Appearance="Primary"
                           Command="{Binding SaveCommand}">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Save24" Margin="0,0,6,0"/>
                        <TextBlock Text="Save All" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </ui:Button>
            </Grid>
        </Grid>
    </Grid>
</ui:FluentWindow>
