<ui:FluentWindow x:Class="QuickTranslate.Desktop.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickTranslate.Desktop.Services"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="{Binding [SettingsTitle], Source={x:Static local:Loc.Instance}}" 
        Height="650" 
        Width="750"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        MinHeight="550"
        MinWidth="650"
        Background="{ui:ThemeResource ApplicationBackgroundBrush}"
        Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica">
    
    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{ui:ThemeResource TextFillColorSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ui:ThemeResource AccentTextFillColorPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ui:TitleBar Grid.Row="0" Title="{Binding [Settings], Source={x:Static local:Loc.Instance}}"/>
        
        <Grid Grid.Row="1" Margin="16,8,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Left Panel: Provider List -->
            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,12">
                <TextBlock Text="{Binding [AIProviders], Source={x:Static local:Loc.Instance}}" Style="{StaticResource SectionHeader}"/>
                <StackPanel Orientation="Horizontal">
                    <ui:Button Command="{Binding AddProviderCommand}" Appearance="Secondary" Margin="0,0,4,0">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Add24" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding [Add], Source={x:Static local:Loc.Instance}}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ui:Button>
                    <ui:Button Command="{Binding DuplicateProviderCommand}" Appearance="Secondary" Margin="0,0,4,0">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Copy24" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding [Copy], Source={x:Static local:Loc.Instance}}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ui:Button>
                    <ui:Button Command="{Binding DeleteProviderCommand}" Appearance="Secondary">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Delete24" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding [Delete], Source={x:Static local:Loc.Instance}}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ui:Button>
                </StackPanel>
            </StackPanel>

            <ListBox Grid.Column="0" Grid.Row="1"
                     ItemsSource="{Binding Providers}"
                     SelectedItem="{Binding SelectedProvider}"
                     DisplayMemberPath="Name"
                     Margin="0,0,0,8"/>

            <!-- Right Panel: Provider Settings -->
            <TextBlock Grid.Column="2" Grid.Row="0" 
                       Text="{Binding [ProviderConfiguration], Source={x:Static local:Loc.Instance}}" 
                       Style="{StaticResource SectionHeader}"/>

            <ScrollViewer Grid.Column="2" Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel IsEnabled="{Binding HasSelectedProvider}">
                    <!-- Provider Name -->
                    <TextBlock Text="{Binding [ProviderName], Source={x:Static local:Loc.Instance}}" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding ProviderName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,12"/>

                    <!-- Provider Type -->
                    <TextBlock Text="Provider Type" Style="{StaticResource FieldLabel}"/>
                    <ComboBox ItemsSource="{Binding AvailableProviderTypes}"
                              SelectedItem="{Binding SelectedProviderType}"
                              Margin="0,0,0,12">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Description}" FontSize="11" Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Base URL -->
                    <TextBlock Text="{Binding [BaseUrl], Source={x:Static local:Loc.Instance}}" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding BaseUrl, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,12"/>

                    <!-- API Key -->
                    <TextBlock Text="{Binding [ApiKey], Source={x:Static local:Loc.Instance}}" Style="{StaticResource FieldLabel}"/>
                    <PasswordBox x:Name="ApiKeyBox"
                                 PasswordChanged="ApiKeyBox_PasswordChanged"
                                 Margin="0,0,0,12"/>

                    <!-- Model -->
                    <TextBlock Text="{Binding [Model], Source={x:Static local:Loc.Instance}}" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding Model, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,12"/>

                    <!-- Temperature & Max Tokens -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding [Temperature], Source={x:Static local:Loc.Instance}}" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Temperature, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="{Binding [MaxTokens], Source={x:Static local:Loc.Instance}}" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding MaxTokens, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Timeout -->
                    <TextBlock Text="{Binding [Timeout], Source={x:Static local:Loc.Instance}}" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding TimeoutSeconds, UpdateSourceTrigger=PropertyChanged}" 
                             Width="120"
                             HorizontalAlignment="Left"
                             Margin="0,0,0,16"/>

                    <ui:Button Command="{Binding TestConnectionCommand}"
                               Appearance="Secondary"
                               HorizontalAlignment="Left"
                               IsEnabled="{Binding IsTesting, Converter={StaticResource InverseBoolConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Link24" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding [TestConnection], Source={x:Static local:Loc.Instance}}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ui:Button>
                </StackPanel>
            </ScrollViewer>

            <!-- Global Settings -->
            <ui:Card Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" Margin="0,12,0,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="{Binding [GlobalSettings], Source={x:Static local:Loc.Instance}}" Style="{StaticResource SectionHeader}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="{Binding [DefaultTargetLanguage], Source={x:Static local:Loc.Instance}}" 
                                   Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,12,0"/>
                        <ComboBox ItemsSource="{Binding AvailableLanguages}"
                                  Text="{Binding TargetLanguage, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                  IsEditable="True"
                                  Width="150"/>
                    </StackPanel>
                    
                    <!-- Language Selection -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="{Binding [Language], Source={x:Static local:Loc.Instance}}" 
                                   Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,12,0"/>
                        <ComboBox ItemsSource="{Binding AvailableInterfaceLanguages}"
                                  SelectedValue="{Binding SelectedInterfaceLanguage}"
                                  SelectedValuePath="Code"
                                  DisplayMemberPath="Name"
                                  Width="150"/>
                    </StackPanel>
                    
                    <!-- Color Theme Selection -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="{Binding [ColorTheme], Source={x:Static local:Loc.Instance}}" 
                                   Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,12,0"/>
                        <ComboBox ItemsSource="{Binding AvailableColorThemes}"
                                  SelectedValue="{Binding SelectedColorTheme, Mode=TwoWay}"
                                  SelectedValuePath="Theme"
                                  DisplayMemberPath="DisplayName"
                                  Width="180"/>
                    </StackPanel>
                    
                    <!-- Hotkeys -->
                    <TextBlock Text="{Binding [KeyboardShortcuts], Source={x:Static local:Loc.Instance}}" 
                               FontSize="13" 
                               FontWeight="SemiBold" 
                               Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" 
                               Margin="0,0,0,12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="{Binding [TranslateSelection], Source={x:Static local:Loc.Instance}}" 
                                   Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" 
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 x:Name="TranslateSelectionHotkeyBox"
                                 Text="{Binding TranslateSelectionHotkeyText, Mode=OneWay}"
                                 IsReadOnly="True"
                                 Margin="0,0,8,12"
                                 PreviewKeyDown="HotkeyBox_PreviewKeyDown"
                                 GotFocus="HotkeyBox_GotFocus"
                                 LostFocus="HotkeyBox_LostFocus"
                                 Tag="TranslateSelection"/>
                        <ui:Button Grid.Row="0" Grid.Column="2" 
                                   Appearance="Secondary"
                                   Click="ResetHotkey_Click" 
                                   Tag="TranslateSelection" 
                                   Margin="0,0,0,12">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="ArrowReset24" Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding [Reset], Source={x:Static local:Loc.Instance}}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ui:Button>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="{Binding [ShowHideWindow], Source={x:Static local:Loc.Instance}}" 
                                   Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" 
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 x:Name="ShowHideHotkeyBox"
                                 Text="{Binding ShowHideHotkeyText, Mode=OneWay}"
                                 IsReadOnly="True"
                                 Margin="0,0,8,0"
                                 PreviewKeyDown="HotkeyBox_PreviewKeyDown"
                                 GotFocus="HotkeyBox_GotFocus"
                                 LostFocus="HotkeyBox_LostFocus"
                                 Tag="ShowHide"/>
                        <ui:Button Grid.Row="1" Grid.Column="2" 
                                   Appearance="Secondary"
                                   Click="ResetHotkey_Click" 
                                   Tag="ShowHide">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="ArrowReset24" Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding [Reset], Source={x:Static local:Loc.Instance}}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ui:Button>
                    </Grid>
                </StackPanel>
            </ui:Card>

            <!-- Status & Buttons -->
            <Grid Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}" 
                           Foreground="{ui:ThemeResource AccentTextFillColorPrimaryBrush}"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>

                <ui:Button Grid.Column="1" 
                           Appearance="Secondary"
                           Click="Cancel_Click"
                           Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Dismiss24" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding [Cancel], Source={x:Static local:Loc.Instance}}" VerticalAlignment="Center"/>
                    </StackPanel>
                </ui:Button>
                
                <ui:Button Grid.Column="2" 
                           Appearance="Primary"
                           Command="{Binding SaveCommand}">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Save24" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding [SaveAll], Source={x:Static local:Loc.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </ui:Button>
            </Grid>
        </Grid>
    </Grid>
</ui:FluentWindow>
