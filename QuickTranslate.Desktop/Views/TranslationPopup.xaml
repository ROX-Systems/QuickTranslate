<Window x:Class="QuickTranslate.Desktop.Views.TranslationPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:QuickTranslate.Desktop.Services"
        xmlns:converters="clr-namespace:QuickTranslate.Desktop.Converters"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Translation"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        MaxWidth="550"
        MaxHeight="450"
        Deactivated="Window_Deactivated">
    
    <Border Background="{ui:ThemeResource ApplicationBackgroundBrush}"
            BorderBrush="{ui:ThemeResource ControlStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="16"
            Margin="4"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.4" ShadowDepth="0"/>
        </Border.Effect>
        
        <Grid MinWidth="320">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="LocalLanguage24" 
                                   Foreground="{ui:ThemeResource AccentTextFillColorPrimaryBrush}"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding [QuickTranslation], Source={x:Static local:Loc.Instance}}" 
                               Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" 
                               FontWeight="SemiBold" 
                               FontSize="14"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <ui:Button HorizontalAlignment="Right"
                           Appearance="Transparent"
                           Command="{Binding CloseCommand}"
                           Padding="6"
                           ToolTip="{Binding [Close], Source={x:Static local:Loc.Instance}}">
                    <ui:SymbolIcon Symbol="Dismiss16"/>
                </ui:Button>
            </Grid>
            
            <!-- Translation Text -->
            <ScrollViewer Grid.Row="1"
                          x:Name="TranslationScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          MaxHeight="300"
                          Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisConverter}}">
                <TextBlock Text="{Binding TranslatedText}"
                           Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
                           TextWrapping="Wrap"
                           FontSize="14"
                           LineHeight="22"
                           Padding="4"/>
            </ScrollViewer>

            <!-- Loading indicator -->
            <StackPanel Grid.Row="1"
                        x:Name="LoadingPanel"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
                <ui:ProgressRing IsIndeterminate="True"
                                 Width="32"
                                 Height="32"
                                 Margin="0,0,0,8"/>
                <TextBlock Text="{Binding [Translating], Source={x:Static local:Loc.Instance}}"
                           Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                           FontSize="13"/>
            </StackPanel>

            <!-- Error message -->
            <Border Grid.Row="1"
                    x:Name="ErrorBorder"
                    Background="{ui:ThemeResource SystemFillColorCriticalBackgroundBrush}"
                    CornerRadius="4"
                    Padding="12"
                    Visibility="{Binding HasError, Converter={StaticResource BoolToVisConverter}}">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="ErrorCircle24"
                                   Foreground="{ui:ThemeResource SystemFillColorCriticalBrush}"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="{ui:ThemeResource SystemFillColorCriticalBrush}"
                               TextWrapping="Wrap"
                               FontSize="13"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Footer with copy button and character count -->
            <Grid Grid.Row="2" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Character count -->
                <TextBlock Grid.Column="0"
                           Text="{Binding CharacterCountText}"
                           Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                           FontSize="11"
                           VerticalAlignment="Center"/>

                <!-- Copy button -->
                <ui:Button Grid.Column="1"
                           Appearance="Secondary"
                           Command="{Binding CopyCommand}"
                           Padding="12,6"
                           FontSize="12">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Copy24" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding [Copy], Source={x:Static local:Loc.Instance}}"/>
                    </StackPanel>
                </ui:Button>
            </Grid>
        </Grid>
    </Border>

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
    </Window.Resources>
</Window>
